@{
}
@model CostumerExample.Models.Costumers;


<div style="text-align:center">
    <h2>@Model.CostumerName</h2>
</div>

<input id="customerid" type="hidden" value="@Model.CostumerId" />

<div class="row">
    <div class="col-lg-12 col-md-12 col-xs-12" style="margin-top:10px;">

        <div class="col-lg-2 col-md-2 col-xs-2">Costumer name:</div>
        <div class="col-lg-4 col-md-3 col-xs-4"><b>@Model.CostumerName</b></div>
        <div class="col-lg-2 col-md-2 col-xs-2">Status:</div>
        <div class="col-lg-3 col-md-3 col-xs-3"><b>@Model.CostumerStatus.Status</b></div>

    </div>
    <div class="col-lg-12 col-md-12 col-xs-12" style="margin-top:10px;">

        <div class="col-lg-2 col-md-2 col-xs-2">Country:</div>
        <div class="col-lg-4 col-md-4 col-xs-4"><b>@Model.Country</b></div>
        <div class="col-lg-2 col-md-2 col-xs-2">State:</div>
        <div class="col-lg-3 col-md-3 col-xs-3"><b>@Model.State</b></div>

    </div>
    <div class="col-lg-12 col-md-12 col-xs-12" style="margin-top:10px;">

        <div class="col-lg-2 col-md-2 col-xs-2">City:</div>
        <div class="col-lg-4 col-md-4 col-xs-4"><b>@Model.City</b></div>
        <div class="col-lg-2 col-md-2 col-xs-2">Address:</div>
        <div class="col-lg-3 col-md-3 col-xs-3"><b>@Model.Address</b></div>

    </div>
    <div class="col-lg-12 col-md-12 col-xs-12" style="margin-top:10px;">

        <div class="col-lg-2 col-md-2 col-xs-2">ZipCode:</div>
        <div class="col-lg-4 col-md-4 col-xs-4"><b>@Model.ZipCode</b></div>
        <div class="col-lg-2 col-md-2 col-xs-2">Phone number:</div>
        <div class="col-lg-3 col-md-3 col-xs-3"><b>@Model.PhoneNumber</b></div>

    </div>
    <div class="col-lg-12 col-md-12 col-xs-12" style="margin-top:10px;">

        <div class="col-lg-2 col-md-2 col-xs-2">Creation date:</div>
        <div class="col-lg-4 col-md-4 col-xs-4"><b>@Model.CreationDT.ToString("dd/MM/yyyy HH:mm:ss")</b></div>

    </div>
</div>


<div class="row" style="margin-top:20px;">
    <div style="text-align:right"><button class="btn btn-default" disabled>Add new</button></div>
    <table id="CostumerNotes" class="table table-condensed table-striped table-border" style="width:100%">
        <thead>
            <tr>
                <th style="width:5%;">#</th>
                <th style="width:80%;">Note</th>
                <th style="width:15%;">Date</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

</div>





@section Scripts
{
    <script src="~/js/Costumer.js"></script>
}